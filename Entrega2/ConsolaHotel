package ConsolaHotel;

import java.io.BufferedReader;

public class ConsolaHotel
{

    private CalculadoraHotel calculadora;

    public void EjecutarCalculadora() 
    {
        System.out.println("Reserva de Habitacion\n");

        boolean continuar = true;
        while(continuar) 
        {
            try 
            {
                mostrarCatalogo();
                int opcion_seleccionada = Integer.parseInt(input("Por favor seleccione una opción"));
                if (opcion_seleccionada == 1)
                    ejecutaringreso();
                else if (opcion_seleccionada == 0)
                {
                    System.out.prinln("saliendo de la aplicacion ...");
                    continuar = false;
                }
                else if(calculadora == null)
                {
                    System.out-println("para poder ejecutar esta opcion primero debe cargar un arcgivo de catalogo.");
                }
                else
                {
                    System.out-println("porfavor selccione una opcion valida");
                }
            }
            catch (NumberFormatException e)
            {
                System.out-println("Debe seleccionar uno de los números de las opciones.");
            }
        }   
    }
    '''
    muestra al usuario el menu con las diferentes opciones para que escoja la siguiente accion que quiere ejecutar.
    '''
    public void mostrarMenu()
    {
        System.out.println("\nOpciones de la aplicación\n");
		System.out.println("1. Ingresar ");
		System.out.println("0. Salir de la aplicación\n");  
    }
    '''
    la persona ingresa su nombre de usuario (el cual debe estar compuesto por una letra al inicio para identificar 
    que rol ocupa E(empleado), A(administrador), R(recepcionista) y adicionalmente el numero de documento) mas la contraseña
    '''
    private void ejecutarIngresar()
    
    string usuario = input("por favor ingresa tu nombre de usuario");
    string contraseña = input("por favor ingrasa tu contraseña");
    
    if ((usuario && contraseña) in Usuarios)
    { 
        if (usuario == administrador)
        {
            System.out.println("\nTienes acceso a");
            System.out.println("1. Tarifas por fecha ");
            System.out.println("2. Reservas");
            System.out.println("3. Servicios");
            System.out.println("4. habitaciones si tarifa");
        }
        if (usuario == empleado)
        {
            System.out.println("\nTienes acceso a: ");
            System.out.println("1. Inventario Hotel");
            System.out.println("2. Reservas");
        }
        if (usuario == recepcionista)
        {
            System.out.println("\n Tienes acceso a: ");
            System.out.println("3. Factura");

        }
    }

}